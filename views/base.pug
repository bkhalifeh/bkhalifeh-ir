doctype html
html(lang="fa")
  head
    title= title

    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width,initial-scale=1,shrink-to-fit=no")
    meta(name="author", content=`${author}`)
    meta(name="description", content=`${description}`)

    link(rel="icon", type="image/x-icon", href="/favicon.ico")
    link(rel="stylesheet", type="text/css", href="/static/css/style.css")
    link(rel="stylesheet", type="text/css", href="/static/css/rtl.css")

  body
    .scroll-line
    main.main
      .container.gutter-top
        .row.sticky-parent
          aside.col-12.col-md-12.col-xl-3
            .sidebar.box.shadow.pb-0.sticky-column
              svg.avatar.avatar--180(viewBox="0 0 188 188")
                g.avatar__box
                  image(href=`/static/img/info/${info.image}`, height="100%", width="100%")
              .text-center
                h3.title.title--h3.sidebar__user-name
                  span.weight--500= info.name
                .badge.badge--gray= info.postition
                .social
                  each il in info.links
                    a.social__link(href=`${il.link}`, target="_blank")
                      i(class=`font-icon icon-${il.icon}`)
              .sidebar__info.box-inner.box-inner--rounded
                ul.contacts-block
                  li.contacts-block__item(data-toggle="tooltip", data-placement="top", title="آدرس")
                    i.font-icon.icon-location
                    | #{info.location}
                  li.contacts-block__item(data-toggle="tooltip", data-placement="top", title="ایمیل")
                    a(href=`mailto:${info.email}`)
                      i.font-icon.icon-envelope
                      | #{info.email}
                  li.contacts-block__item(data-toggle="tooltip", data-placement="top", title="تلفن")
                    i.font-icon.icon-phone
                    | #{info.phone}
                a.btn.btn--blue-gradient(href="/resume")
                  i.font-icon.icon-download
                  |  دانلود رزومه
          .col-12.col-md-12.col-xl-9
            .box.shadow.pb-0.pt-sm-6
              .circle-menu.d-sm-none
                .hamburger
                  .line
                  .line
                  .line
              .inner-menu.inner-menu-alt
                ul.nav
                  li.nav__item
                    a(href="/about", class=`${active === 'about' ? 'active': ''}`) درباره من
                  li.nav__item
                    a(href="/portfolio", class=`${active === 'portfolio' ? 'active': ''}`) نمونه کار ها
                  li.nav__item
                    a(href="/blog", class=`${active === 'blog' ? 'active': ''}`) وبلاگ
                  li.nav__item
                    a(href="/contact", class=`${active === 'contact' ? 'active': ''}`) تماس با من
              block content
    .back-to-top
